.backgournd {
  background-image: image-url("<%= asset_path('sign_in_up.png') %>");
  background-size: 350px;
  position: relative;
  height: 100vh;
  overflow: hidden;
  z-index: 0;
}
.background::before {
  position: absolute;
  content: '';
  top: -5px;
  bottom: -5px;
  left: -5px;
  right: -5px;
  background: inherit;
  filter: blur(8px);
  z-index: -1;
}