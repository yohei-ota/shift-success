<%= render "layouts/header"%>
<div class="background">
  <div class="make-admin-main">
    <div class="back-box">
      <% wd = ["日", "月", "火", "水", "木", "金", "土"] %>
      <div class="box-head">
        <h1 class="admin-sub-title"><%= "#{@today.strftime("%m/%d(#{wd[@today.wday]})")}のシフト" %></h1>
        <h1 class="admin-group-name"><%= "#{current_admin.group.group_name}"%></h1>
      </div>
      <div class="table-scroll">
        <table class="shift-table"> 
          <tbody>
            <tr class="tr-wrap">
              <th class="table-head">名前</th>
              <% 25.times do |time| %>
                  <th colspan="2"><%= "#{time}" %></th>
              <% end %>
            </tr>
            <% @users.each do |users| %>
              <tr>
                <td class="table-head border-td"><%= users.name %></td>
                <% 50.times do %>
                  <td class="border-td"><%=""%></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="today-shift-list">
        <% @works.each_with_index do |work, w| %>
          <% @users.each do |user| %>
            <div class="today-shift-day">
              <% if work.user_id == user.id %>
                <div class="shift-one">
                  <span class="user-name-list">
                    <%= user.name %>
                  </span>
                  <% if work.holiday_actual == true %>
                    <span>
                      休み
                    </span>
                  <% else %>
                    <span>
                      <%= work.datetime_in_actual[0,2] %> : <%= work.datetime_in_actual[2,3] %> ~ 
                    </span>
                    <span>
                      <%= work.datetime_out_actual[0,2] %> : <%= work.datetime_out_actual[2,3] %>
                    </span>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>