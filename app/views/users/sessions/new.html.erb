<div class="background">
  <%= form_with model: @user, url: user_session_path, class: 'user-sign-in-main', local: true do |f| %>
    <div class='form-main-text'>
      <h1>メンバーログイン</h1>
    </div>

    <div class="form-group">
      <div class="form-sub-text">
        <label>メールアドレス</label>
        <span>必須</span>
      </div>
      <%= f.email_field :email, class:"input-group", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="form-group">
      <div class="form-sub-text">
        <label>パスワード</label>
        <span>必須</span>
      </div>
      <%= f.password_field :password, class:"input-group", id:"password", placeholder:"6文字以上の半角英数字" %>
    </div>
    
    <div class='form-group'>
      <%= f.submit "ログイン" ,class:"btn" %>
    </div>
  <% end %>
</div>