<header>
  <div class="smart-menu">
    <div class="smart-sub-menu">
      <div class="side-link"><%= "＜#{@today.month - 1}月" %></div>
    </div>
    <div class="smart-sub-menu">
      <div class="sub-title"><%= @today.strftime('%Y年%m月') %></div>
    </div>
    <div class="smart-sub-menu">
      <div class="side-link"><%= "#{@today.month + 1}月＞" %></div>
    </div>
  </div>
</header>

<div class="background">
  <div class="make-user-main">
    <div class="make-user-sub">
      <table class="shift-table">
        <tr>
          <th>日</th>
          <th>月</th>
          <th>火</th>
          <th>水</th>
          <th>木</th>
          <th>金</th>
          <th>土</th>
        </tr>
        <% start_month = @today.at_beginning_of_month.at_beginning_of_week - 1 %>
        <%# ７*５の表にカレンダーを作成 %>
        <% 35.times do |i|%>
          <%# 週初めに<tr>開始タグをつける %>
          <% if i % 7 == 0 %>
            <tr>
          <% end %>
          <%# 先月・来月にはclass属性を付与 %>
          <% if start_month.month == @today.month - 1 || start_month.month == @today.month + 1 %>
            <td class="prev-next-month"><%= start_month.strftime("%d").to_i %></td>
          <% else %>
            <td><%= start_month.strftime("%d").to_i %></td>
          <% end %>
          <%# 週終わりに</tr>閉じタグをつける %>
          <% if i % 7 == 6 %>
            </tr>
          <% end %>
          <% start_month += 1 %>
        <% end %>
      </table>
  


      <table class="shift-table">
        <tbody>
          <tr>
            <th><%= "#{current_user.name}さんのシフト" %></th>
          </tr>
        </tbody>
      </table>

      <% @works.each do |work| %>
        <div>
          <% wd = ["日", "月", "火", "水", "木", "金", "土"] %>
          <%= work.date.strftime("%m/%d(#{wd[work.date.wday]})") %>
          <%= work.datetime_in_actual[0,2] %> : <%= work.datetime_in_actual[2,3] %> ~ 
          <%= work.datetime_out_actual[0,2] %> : <%= work.datetime_out_actual[2,3] %>
        </div>
      <% end %>

    </div>
 </div>
</div>



