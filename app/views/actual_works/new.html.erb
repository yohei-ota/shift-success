<%= render "layouts/header"%>
<div class="background">
  <div class="make-admin-main">
    <div class="back-box">
        <h1 class="admin-title"><%="シフト作成トップ#{current_admin.name}" %></h1>
        <input type="date", id="calender">
        <div class="table-scroll">
          <table class="today-shift", id="table"> 
            <tr>
              <th class="table-head">名前</th>
              <% 25.times do |time| %>
                  <th colspan="2"><%= "#{time}" %></th>
              <% end %>
            </tr>
            <% @users.each_with_index do |users, f| %>
            <tbody class="row-group", id=<%= "group#{f}" %>>
              <tr class="time-list">
                <td class="table-user", id=<%= "user#{f}" %>><%= users.name %></td>
                <% 50.times do |i|%>
                  <td class="border-th", id=<%= "#{i}" %>><%=""%></td>
                <% end %>
              </tr>
            </tbody>
            <% end %>
          </table>
        </div>

        <div class="today-shift", id="shift">
          
        </div>




        <%= form_with model:@works, url: actual_works_path, id: "shift-form", local: true do |f| %>
        <div class='form-wrap'>
          <div class='login-flash-message'>
            <%= flash[:notice] %>
            <%= flash[:alert] %>
          </div>
          <%= render 'layouts/error_messages', model: f.object %>
            <%= f.text_field :user_id, id:"user-id" %>
            <%= f.text_field :date, id:"work-date"%>
            <div class="form-group">
              <%= f.text_field :datetime_in_actual, id:"in-time" %>
            </div>
            <div class="form-group">
              <%= f.text_field :datetime_out_actual, id:"out-time" %>
            </div>
            <div class="form-group">
              <%= f.check_box :holiday_actual, checked_value: "1", unchecked_value: "0", class:"holiday", id:"holiday" %>
            </div>

          <div class='login-btn'>
            <%= f.submit "保存" ,class:"login-red-btn", id:"btn" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>