<%= render "layouts/header"%>
<div class="background">
  <div class="make-admin-main">
    <div class="back-box">
      <h1 class="admin-title"><%="日報作成トップ#{current_admin.name}" %></h1>
        <div class="table-scroll">
          <table class="today-shift", id="table"> 
            <tr>
              <th class="table-head">名前</th>
              <% 25.times do |time| %>
                  <th colspan="2"><%= "#{time}" %></th>
              <% end %>
            </tr>
            <% @users.each_with_index do |users, f| %>
            <tbody class="row-group", id=<%= "group#{f}" %>>
              <tr class="time-list">
                <td class="table-user", id=<%= "user#{f}" %>><%= users.name %></td>
                <% 50.times do |i|%>
                  <td class="border-th", id=<%= "#{i}" %>><%=""%></td>
                <% end %>
              </tr>
            </tbody>
            <% end %>
          </table>
        </div>



      <%= form_with model:@works, url: "#", id: "shift-form", local: true do |f| %>
        <% @works.each do |work| %>
          <% @users.each do |user| %>
            <% if work.holiday_actual == false %>
              <div class='form-wrap'>
                <div class='login-flash-message'>
                  <%= flash[:notice] %>
                  <%= flash[:alert] %>
                </div>
                <%# <%= render 'layouts/error_messages', model: f.object %>
                <% if work.user_id == user.id%>
                  <div class="form-group">
                    <%= f.text_field :user_id, value: user.name, id:"user-id" %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :datetime_in_actual, value: work.datetime_in_actual, id:"in-time" %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :datetime_out_actual, value: work.datetime_out_actual, id:"out-time" %>
                  </div>
                  <div class='login-btn'>
                    <%= f.submit "保存" ,class:"login-red-btn", id:"btn" %>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class='form-wrap'>
                <div class='login-flash-message'>
                  <%= flash[:notice] %>
                  <%= flash[:alert] %>
                </div>
                <%# <%= render 'layouts/error_messages', model: f.object %>
                <% if work.user_id == user.id%>
                  <div class="form-group">
                    <%= f.text_field :user_id, value: user.name, id:"user-id" %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :datetime_in_actual, type:"hidden", id:"in-time" %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :datetime_out_actual, type:"hidden", id:"out-time" %>
                  </div>
                  <div class="form-group">
                    <%= f.check_box :holiday_actual, id:"holiday",:as => :boolean, checked:true %>
                  </div>
                  <div class='login-btn'>
                    <%= f.submit "保存" ,class:"login-red-btn", id:"btn" %>
                  </div>
                <% end %>
              </div>
              <% end %>
          <% end %>

        <% end %>
      <% end %>
    </div>
  </div>
</div>