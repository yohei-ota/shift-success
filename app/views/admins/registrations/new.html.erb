<%= form_with model: @admin, url: admin_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      管理者新規登録
    </h1>
  </div>

  <%= render 'layouts/error_messages', model: f.object, locals: { model: @admin } %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">氏名</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :name, class:"input-default", id:"name", placeholder:"例)田中太郎", maxlength:"40", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">暗証番号</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.number_field :code, class:"input-default", id:"group-name", placeholder:"半角数字4文字以上", min: 4 %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">締め日</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.number_field :dead_line, class:"input-default", id:"dead-line", placeholder:"選択してください",min: 1, max: 31 %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">給料日</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.number_field :pay_day, class:"input-default", id:"pay-day", placeholder:"選択してください",min: 1, max: 31 %>
  </div>

  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>