<div class="background">
  <div class="make-group">
    <%= form_with model: @admin, url: admin_session_path, class: 'admin-sign-in-main', local: true do |f| %>
      <div class='form-main'>
        <h1 class='form-main-text'>
          管理者ログイン
        </h1>
      </div>

      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-sub-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-group", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-group", id:"password", placeholder:"6文字以上の半角英数字" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-sub-text">暗証番号</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :code, class:"input-group", id:"email", placeholder:"半角数字4文字以上", minlength: "4" %>
      </div>

      <div class='form-group'>
        <%= f.submit "ログイン" ,class:"btn" %>
      </div>
    <% end %>
  </div>
</div>